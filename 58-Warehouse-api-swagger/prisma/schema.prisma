generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserModel {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  role       Role      @default(WAREHOUSE_MANAGER)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  createdProducts ProductModel[] @relation("CreatedProducts")
  modifiedProducts ProductModel[] @relation("ModifiedProducts")
}

model ProductModel {
  id           Int       @id @default(autoincrement())
  name         String
  description  String?
  price        Float
  quantity     Int       @default(0)
  category     String?
  sku          String?   @unique
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  createdBy    UserModel      @relation("CreatedProducts", fields: [createdById], references: [id])
  createdById  Int
  updatedBy    UserModel?     @relation("ModifiedProducts", fields: [updatedById], references: [id])
  updatedById  Int?
}

enum Role {
  SUPERADMIN
  ADMIN
  WAREHOUSE_MANAGER
}